<div class="library main container">
    <h1>My Messages</h1>
    {{#each messages}}
        <div class="row">
            <div class="col-md-4">
                From: {{dataValues.fromId}}
            </div>
            <div class="col-md-4">
                Subject: {{dataValues.subject}}
            </div>
            <div class="col-md-4">
                Date: {{dataValues.createdAt}}
            </div>
        </div>

        <div class="row">
            <div class="col-md-10">
                {{dataValues.body}}
            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                    <button class="connect btn btn-primary" onclick="location.href='/messages/compose/{{dataValues.fromId}}'">Reply</button>
            </div>
        </div>
        <hr />
        <!-- If someone can style this -->
    {{/each}}
</div>
