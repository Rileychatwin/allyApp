<div class="library">
    <div class="container">
        <h1>Library</h1>
        <!--Planning on using https://www.w3schools.com/bootstrap/bootstrap_filters.asp to apply jQuery filter-->
        <div class="filter-menu">
            <ul id="control" class="list-filter list-unstyled">
                <li class="" data-filter="all">All</li>
                <li data-filter="1">Books</li>
                <li data-filter="2">Childrens Books</li>
                <li data-filter="3">Podcasts</li>
                <li data-filter="4">Articles</li>
                <li data-filter="5">Films</li>
                <li data-filter="6">Short Films</li>
                <li data-filter="7">User Recommendations</li>
            </ul>
        </div>
        <div class="library-content">
            <div id="filter-container" class="row">
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="1" data-sort="value">
                    {{#each books}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p>By {{author}}</p>
                            <p>Genre: {{genre}}</p>
                            <p id="purchase-link"><a href="{{link1}}">Purchase</a></p>
                            <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="2" data-sort="value">
                    {{#each childrensBooks}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p>By {{author}}</p>
                            <p id="purchase-link"><a href="{{link1}}">Purchase</a></p>
                            <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="3" data-sort="value">
                    {{#each podcasts}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p id="purchase-link"><a href="{{link1}}">Listen</a></p>
                            <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="4" data-sort="value">
                    {{#each articles}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p>By {{author}}</p>
                            <p id="purchase-link"><a href="{{link}}">Read</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="5" data-sort="value">
                    {{#each toWatch_long}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p>Found on {{streaming_service}}</p>
                            <p id="purchase-link"><a href="{{link}}">Watch</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="6" data-sort="value">
                    {{#each toWatch_short}}
                        <div class="item">
                            <h3>{{title}}</h3>
                            <p>Found on {{streaming_service}}</p>
                            <p id="purchase-link"><a href="{{link}}">Watch</a></p>
                        </div>
                    {{/each}}
                </div>
                <div class="col-lg-4 col-md-6 filter-item filteredOut" data-category="7" data-sort="value">
                </div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/library.js"></script>
