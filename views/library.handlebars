<div class="library main container">
    <h1>Library</h1>
    <!--Planning on using https://www.w3schools.com/bootstrap/bootstrap_filters.asp to apply jQuery filter-->
    <div id="filter-menu">
            <div class="row ">
                <div class="col-3">
                    <button class="btn lib-btn text-secondary active" onclick="filterSelection('all')"> Show all</button>
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('books')"> Books</button>                
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('childrensBooks')"> Childrens Books</button>
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('podcasts')"> Podcasts</button>
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('articles')"> Articles</button>
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('films')"> Films</button>
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('shortFilms')"> Short Films</button>
                </div>
                <div class="col-3">
                    <button class="btn lib-btn text-secondary" onclick="filterSelection('userRecs')"> User Recommendations</button>
                </div>
            </div>
        </div>
        <br>
        <br>
    <div class="container library-content">
        <div id="filter-container" class="row">
            <div class="col-lg-4 col-md-6 filterDiv books" data-category="1" data-sort="value">
                {{#each books}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p>By {{author}}</p>
                        <p>Genre: {{genre}}</p>
                        <p id="purchase-link"><a href="{{link1}}">Purchase</a></p>
                        <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv childrensBooks" data-category="2" data-sort="value">
                {{#each childrensBooks}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p>By {{author}}</p>
                        <p id="purchase-link"><a href="{{link1}}">Purchase</a></p>
                        <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv podcasts" data-category="3" data-sort="value">
                {{#each podcasts}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p id="purchase-link"><a href="{{link1}}">Listen</a></p>
                        <p id="amazon-link"><a href="{{link2}}">Amazon</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv articles" data-category="4" data-sort="value">
                {{#each articles}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p>By {{author}}</p>
                        <p id="purchase-link"><a href="{{link}}">Read</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv films" data-category="5" data-sort="value">
                {{#each toWatch_long}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p>Found on {{streaming_service}}</p>
                        <p id="purchase-link"><a href="{{link}}">Watch</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv shortFilms" data-category="6" data-sort="value">
                {{#each toWatch_short}}
                    <div class="item">
                        <h3>{{title}}</h3>
                        <p>Found on {{streaming_service}}</p>
                        <p id="purchase-link"><a href="{{link}}">Watch</a></p>
                    </div>
                {{/each}}
            </div>
            <div class="col-lg-4 col-md-6 filterDiv userRecs" data-category="7" data-sort="value">
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/library.js"></script>
