<div class="container">
  <div class="card ally-box text-center">
    <h1 class="display-1 ally">ally</h1>
    <blockquote class="blockquote mb-0">
      <h4 class="font-italic noun">noun:</h4>
      <p>One that is associated with another as a helper; a person or group that
        provides assistance and support in an ongoing effort, activity, or struggle.
      </p>
      <h4 class="font-italic verb">verb:</h4>
      <p>To unite or form a connection or relation between; associate.
      </p>
      <footer class="blockquote-footer text-secondary">
        <small>
          <cite title="Source Title" class="text-secondary">Merriam-Webster</cite>
        </small>
      </footer>
    </blockquote>
  </div>
</div>
<div class="container help-box">
  <div class="needhelp-box text-center">
    <h1>Need help?</h1>
    <h3>Submit a request for help below!</h3>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 text-center" id="filter-menu">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-lg help-btn text-secondary" data-toggle="modal" data-target="#staticBackdrop">
        Request Help
      </button>
    </div>
  </div>
</div>

<!-- Modal/Blog Form -->
<div class="modal fade" id="staticBackdrop" data-backdrop="static" tabindex="-1" role="dialog"
  aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Request Help</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="helpForm">
          <div class="form-group">
            <label for="title">Subject:</label>
            <input placeholder="Blog Title" type="text" class="form-control" id="title">
            <br />
            <label for="body">Description:</label>
            <textarea placeholder="Describe the situation and the type of help you need from an ally."
              class="form-control" rows="10" id="body"></textarea>
            <div class="form-group">
              {{!-- Username will auto populate from log-in info--}}
              <label for="category">Username:</label>
            </div>
          </div>
        </form>
      </div>
      <div class=" modal-footer">
        <button type="submit" class="btn btn-primary submit">Submit</button>
      </div>
    </div>
  </div>
</div>
</div>
<div class="row">
  <div class="col-md-12 blog-container">
    {{#each data}}
    <div class="card">
      <div class="card-header">
        <button class="connect btn btn-primary">Connect</button>
        <h4>Title: {{dataValues.title}}</h4>
        <p>Created: {{dataValues.createdAt}}</p>
        <p id="blogName">Username: {{dataValues.name}}</p>
      </div>
      <div class="card-body">
        <p>Description: {{dataValues.body}}</p>
      </div>
    </div>
    {{/each}}
  </div>
</div>
<!-- SCRIPT FOR MODALS -->
<script>
  $(function () {
    $('.btn[data-toggle=modal]').on('click', function () {
      var $btn = $(this);
      var currentDialog = $btn.closest('.modal-dialog'),
        targetDialog = $($btn.attr('data-target'));;
      if (!currentDialog.length)
        return;
      targetDialog.data('previous-dialog', currentDialog);
      currentDialog.addClass('aside');
      var stackedDialogCount = $('.modal.in .modal-dialog.aside').length;
      if (stackedDialogCount <= 5) {
        currentDialog.addClass('aside-' + stackedDialogCount);
      }
    });
  });
</script>
